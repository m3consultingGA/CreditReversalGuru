@model CreditReversal.Models.Pricing
@{
    ViewBag.Title = "Edit Pricing";
    Layout = "~/Views/Shared/_secureLayoutPage.cshtml";
}

<div class="page-header">
    @*<h3 class="page-title">Letter </h3>*@
    <ol class="breadcrumb pull-right">
        <li><a href="/Dashboard/Admin"><i class="fa fa-dashboard"></i>&nbsp;Dashboard</a></li>
        <li><a href="/Admin/Pricing"><i class="fa fa-rupee"></i>&nbsp;Manage Pricing </a></li>
        <li class="active">Edit Pricing </li>
    </ol>
</div>

@*<ol class="breadcrumb pull-right">
        <li class="breadcrumb-item"><a href="/Dashboard/Admin"><i class="fa fa-dashboard"></i>&nbsp;Dashboard</a></li>
        <li class="breadcrumb-item active">Edit Pricing </li>
    </ol>
    <title>Edit Pricing</title>*@


<div style="padding-top:20px;">
    <div class="portlet portlet-boxed">
        <div class="portlet-header">
            <h4 class="portlet-title">
                Add Pricing
            </h4>
        </div> <!-- /.portlet-header -->
        <div class="portlet-body">
            <div class="row" style="padding:20px 10px 10px 20px;">
                <form method="post" action="/Admin/Edit" enctype="multipart/form-data">
                    <input type="text" name="PricingId" value="@Model.PricingId" hidden />

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2">
                                <label for="Pricingtype">Pricing Type <span style="color:red">*</span></label>
                            </div>
                            <div class="col-lg-5">
                                <input type="text" name="PricingType" class="form-control" value="@Model.PricingType" placeholder="Pricing Type" required readonly />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2">
                                <label for="logo">Upload Logo</label>
                            </div>
                            <div class="col-lg-5">
                                <input type="file" name="Logo" class="form-control" placeholder="Upload Logo" />
                                <label>@Model.LogoText</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2">
                                <label for="SetupFee">Setup Fee <span style="color:red">*</span></label>
                            </div>
                            <div class="col-lg-5">
                                <input type="number" name="SetupFee" step="any" id="SetupFee" class="form-control" value="@Model.SetupFee" placeholder="Setup Fee" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2">
                                <label for="PricePerMonth">Price PerMonth <span style="color:red">*</span></label>
                            </div>
                            <div class="col-lg-5">
                                <input type="number" name="PricePerMonth" step="any" id="PricePerMonth" class="form-control" value="@Model.PricePerMonth" placeholder="Price PerMonth" required />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2">
                                <label for="AdditionalAgent">Additional Agent <span style="color:red">*</span></label>
                            </div>
                            <div class="col-lg-5">
                                <input type="number" name="AdditionalAgent" step="any" id="AdditionalAgent" class="form-control" value="@Model.AdditionalAgent" placeholder="Additional Agent" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2">
                            </div>
                            <div class="col-lg-5">
                                <input type="submit" id="btnupdate" class="btn btn-secondary" value="Update" />
                                <a href="/Admin/Pricing" class="btn btn-danger">Cancel</a>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>