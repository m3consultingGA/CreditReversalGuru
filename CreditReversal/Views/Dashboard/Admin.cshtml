
@{
	ViewBag.Title = "Admin";
	Layout = "~/Views/Shared/_secureLayoutPage.cshtml";
}

<title>Admin Dashboard</title>

<div class="pl-4">
    <div class="col-lg-12">
        <div class="row">
            <div class="divMain">
                <h5>Admin Dashboard</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="icon-stat">
                    <div class="row">
                        <div class="col-xs-8 text-left">
                            <span class="icon-stat-label">Agent</span> <!-- /.icon-stat-label -->
                            <span class="icon-stat-value">@ViewBag.TotalAgents</span> <!-- /.icon-stat-value -->
                        </div><!-- /.col-xs-8 -->
                        <div class="col-xs-4 text-center">
                            <i class="fa fa-user-plus icon-stat-visual bg-primary"></i> <!-- /.icon-stat-visual -->
                        </div><!-- /.col-xs-4 -->
                    </div><!-- /.row -->
                    <div class="icon-stat-footer">
                        <i class="fa fa-arrow-circle-right"></i> <a href="/Agent/Index" class="small-box-footer">More info </a>
                    </div>
                </div> <!-- /.icon-stat -->
            </div> <!-- /.col-md-3 -->
            <div class="col-md-3 col-sm-6">
                <div class="icon-stat">
                    <div class="row">
                        <div class="col-xs-8 text-left">
                            <span class="icon-stat-label">Clients</span> <!-- /.icon-stat-label -->
                            <span class="icon-stat-value">@ViewBag.TotalClients</span> <!-- /.icon-stat-value -->
                        </div><!-- /.col-xs-8 -->
                        <div class="col-xs-4 text-center">
                            <i class="fa fa-users icon-stat-visual bg-primary"></i> <!-- /.icon-stat-visual -->
                        </div><!-- /.col-xs-4 -->
                    </div><!-- /.row -->
                    <div class="icon-stat-footer">
                        <i class="fa fa-arrow-circle-right"></i> <a href="#" class="small-box-footer">More info</a>
                    </div>
                </div> <!-- /.icon-stat -->
            </div> <!-- /.col-md-3 -->
        </div> <!-- /.row -->

        
    </div>
</div>



