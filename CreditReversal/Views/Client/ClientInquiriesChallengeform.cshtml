@using CreditReversal.Models
@model dynamic

@{
    ViewBag.Title = "ClientInquiriesChallengeform";
    Layout = "";
    //var Agency = Session["Agency"];
    dynamic values = Session["values"];
     dynamic clientModel = Session["ClientAddress"];
    Inquires Inquires = Model.clientcredit;




    var Toaddress1=string.Empty;
    var Toaddress2=string.Empty;
    var Toaddress3=string.Empty;
    if (values[5] == "Experian")
    {
        Toaddress1= System.Configuration.ConfigurationManager.AppSettings["EXADDRESS1"];
        Toaddress2= System.Configuration.ConfigurationManager.AppSettings["EXADDRESS2"];
        Toaddress3=  System.Configuration.ConfigurationManager.AppSettings["EXADDRESS3"];
    }
    if (values[5] == "TransUnion")
    {
        Toaddress1= System.Configuration.ConfigurationManager.AppSettings["TUADDRESS1"];
        Toaddress2= System.Configuration.ConfigurationManager.AppSettings["TUADDRESS2"];
        Toaddress3=  System.Configuration.ConfigurationManager.AppSettings["TUADDRESS3"];
    }
    if (values[5] == "Equifax")
    {
        Toaddress1= System.Configuration.ConfigurationManager.AppSettings["EQADDRESS1"];
        Toaddress2= System.Configuration.ConfigurationManager.AppSettings["EQADDRESS2"];
        Toaddress3=  System.Configuration.ConfigurationManager.AppSettings["EQADDRESS3"];
    }
    <title> Challenge</title>
    <html>

   
    


    <body>
        <table>
            <tr>
                <td>
                    <span style="color:#eee;font-family:Helvetica;font-size:4px;">---F---</span><br />

                    @values[0] @values[1]<br />
                    @clientModel.Address1<br />
                    @clientModel.City, @clientModel.State @clientModel.ZipCode
                </td>
            </tr>
            <tr><td style="padding-top:55px;"></td></tr>

            @*Address2*@

            <tr>
                <td>
                    @*To Address<br />
                    Equifax Information Services LLC<br />
                    P.O. Box 740256<br />
                    Atlanta, GA 30348*@
                    @*To Address<br />*@
                    @Toaddress1<br />
                    @Toaddress2<br />
                    @Toaddress3<br />


                </td>
            </tr>
        </table><br /><br /><br /><br /><br /><br /><br /><br />




        <div class="row" style="padding-top:20px;">

            <table class="table" style="border:1px solid #000;width:300px;">
                <tr>
                    <td style="width:100px;padding:8px;border-right:1px solid #000;border-bottom:1px solid #000;"><strong>First Name </strong></td>
                    <td style="width:100px;padding:8px;border-bottom:1px solid #000;"><strong>@values[0]</strong></td>
                </tr>
                <tr>
                    <td style="width:100px;padding:8px;border-right:1px solid #000;border-bottom:1px solid #000;"><strong>Last Name</strong></td>
                    <td style="width:100px;padding:8px;border-bottom:1px solid #000;"><strong>@values[1]</strong></td>
                </tr>
                <tr>
                    <td style="width:100px;padding:8px;border-right:1px solid #000;border-bottom:1px solid #000;"><strong>SSN</strong></td>
                    <td style="width:100px;padding:8px;border-bottom:1px solid #000;"><strong>@values[4]</strong></td>
                </tr>
                <tr>
                    <td style="width:100px;padding:8px;border-right:1px solid #000;border-bottom:1px solid #000;"><strong>Date</strong></td>
                    <td style="width:100px;padding:8px;border-bottom:1px solid #000;"><strong>@values[2]</strong></td>
                </tr>
                <tr>
                    <td style="width:100px;padding:8px;border-right:1px solid #000;"><strong>Agency</strong></td>
                    <td style="width:100px;padding:8px;"><strong>@values[5]</strong></td>
                </tr>

            </table>
        </div>

        <div class="row" style="padding-top:20px;">
            <table class="table" style="border:1px solid #000;width:800px;">

                <tr>
                    <td>
                        <p>
                            <strong>
                                To whom it may concern; <br />
                                I have thoroughly reviewed my credit report and I would like to inform you of the following inaccuracies it contains, see
                                detailed information below. I am requesting, under the provision of the Fair Credit Reporting Act (FCRA), 15 USC
                                Section 1681, that you investigate the following accounts.
                            </strong>
                        </p>
                    </td>
                </tr>
            </table>

        </div>

        <div class="row" style="padding-top:20px;">
            <table class="table" style="border-right:1px solid #000;border-left:1px solid #000;border-top:1px solid #000;width:800px;">
                <thead>
                    <tr>
                        <th style="width:20px;padding:8px;border-right:1px solid #000;border-bottom:1px solid #000;text-align:left"><strong>Creditor Name</strong></th>
                        <th style="width:20px;padding:8px;border-right:1px solid #000;border-bottom:1px solid #000;text-align:left"><strong>Type of Business</strong></th>
                        <th style="width:20px;padding:8px;border-right:1px solid #000;border-bottom:1px solid #000; text-align:left"><strong>Type</strong></th>
                        <th style="width:20px;padding:8px;border-bottom:1px solid #000; text-align:left"><strong>Comments </strong></th>
                    </tr>
                </thead>

                @{
                    <tbody>
                        <tr>
                            <td style="width:20px; border-bottom:1px solid #000;border-right:1px solid #000;padding:8px;">@Inquires.CreditorName</td>
                            <td style="border-bottom:1px solid #000;border-right:1px solid #000;padding:8px;">@Inquires.TypeofBusiness</td>
                            <td style="border-bottom:1px solid #000;border-right:1px solid #000;padding:8px;">@Inquires.AccountType </td>
                            <td style="border-bottom:1px solid #000;padding:8px;">@Inquires.ChallengeText</td>
                        </tr>
                    </tbody>
                    <br />
                }

            </table>
            <br />
            <br />  <br />  <br />  <br />
            <table style="width:800px">
                <tr>
                    <td>Date <br />  @{ <div>@DateTime.Now.ToShortDateString()</div> }</td>
                    <td style="text-align:right">Signature</td>
                </tr>
            </table>

        </div>
    </body>

    </html>
}
<br />
