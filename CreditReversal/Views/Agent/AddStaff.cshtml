
@{

    Layout = "~/Views/Shared/_secureLayoutPage.cshtml";
    if (Request["mode"] == null)
    {
        ViewBag.Title = "Add Staff";
    }
    else
    {
        ViewBag.Title = "My Profile";

    }
}
<div class="page-header">
    @*<h3 class="page-title">Letter </h3>*@
    <ol class="breadcrumb pull-right">
        <li><a href="@ViewBag.Dasboard"><i class="fa fa-dashboard"></i>&nbsp;Dashboard</a></li>
        <li active">@ViewBag.Title </li>
    </ol>
</div>
<style>
    .errmsg {
        color: red;
    }
</style>


<div class="loader"> </div>
<div id="overlay"></div>


<div style="padding-top:20px;">
    <div class="portlet portlet-boxed">
        <div class="portlet-header">
            <h4 class="portlet-title">
                @ViewBag.Title
            </h4>
        </div> <!-- /.portlet-header -->
        <div class="portlet-body">
            <div class="row" style="padding:20px 10px 10px 20px;">
                <div class="row">
                    <form>

                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="FirstName">First Name<span class="errmsg">*</span></label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" name="FirstName" id="FirstName" required>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="LastName">Last Name<span class="errmsg">*</span></label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" name="LastName" id="LastName" required>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="MiddleName">Middle Name</label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" name="MiddleName" id="MiddleName">
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="PhoneNumber">PhoneNumber<span class="errmsg">*</span></label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" name="PhoneNumber" id="PhoneNumber" required>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="Email">Email<span class="errmsg">*</span></label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" name="Email" id="Email" required>
                                        <label id="lblerror" style="color:red"><span style="color:red"></span></label>
                                        <input type="hidden" name="AgentStaffId" id="AgentStaffId" />
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                    </div>
                                    <div class="col-md-8">
                                        <button class="btn btn-secondary" id="btnAddstaff" type="submit">Submit</button>
                                        <button class="btn btn-secondary" id="btnUpdate" type="submit">Update</button>
                                        <a href="/Dashboard/Agent" class="btn btn-danger"> Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="col-md-6">

                        @if (Request["mode"] == null)
                        {

                            <div class="table-responsive">
                                <table id="tblCustomers" class="table table-bordered">
                                   
                                    <thead>
                                        <tr class="trTable">
                                            <th>User Name</th>
                                            <th>Phone Number</th>
                                            <th>Email Address</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.staff != null && ViewBag.staff.Count > 0)
                                        {
                                            foreach (var i in ViewBag.staff)
                                            {
                                                <tr>
                                                    <td>@i.UserName</td>
                                                    <td>@i.PhoneNumber</td>
                                                    <td>@i.Email</td>
                                                    <td>
                                                        <a href="/Agent/AddStaff?Id=@i.AgentStaffId" class="btn btn-secondary"><i class="fa fa-pencil"></i></a>
                                                        @*<button type="submit" onclick="btnDelete('@i.AgentStaffId')" class="btn btn-danger">Delete</button>*@
                                                        @if (@i.CheckClientExit == true)
                                                        {
                                                            <button type="submit" disabled class="btn btn-danger" title="Staff already have clients." style="cursor:pointer"><i class="fa fa-close"></i></button>
                                                        }
                                                        else
                                                        {
                                                            <button type="submit" onclick="btnDelete('@i.AgentStaffId')" class="btn btn-danger"><i class="fa fa-close"></i></button>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8" class="text-center"><b>No Records Found</b></td>

                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>


                        }
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>



<script>
    $(document).ready(function () {
        try {
            $("#tblCustomers").DataTable({
                "pagingType": "simple",
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            });
        } catch (e) {

        }
    var getUrlParameter = function getUrlParameter(sParam) {
        var sPageURL = window.location.search.substring(1),
            sURLVariables = sPageURL.split('&'),
            sParameterName,
            i;

        for (i = 0; i < sURLVariables.length; i++) {
            sParameterName = sURLVariables[i].split('=');

            if (sParameterName[0] === sParam) {
                return sParameterName[1] === undefined ? true : decodeURIComponent(sParameterName[1]);
            }
        }
    };

    //  alert(mode);
    var Id = getUrlParameter('Id');

   

       
        $(".loader").hide();
        $("#overlay").hide();

      

        $("#btnUpdate").hide();
        var Id = getUrlParameter('Id');
        if (Id != undefined) {

            var staffId;
            $.ajax({
                method: "POST",
                url: "/Agent/EditStaff",
                dataType: "json",
                data: { staffId: Id },
                success: function (data) {
                    $("#btnAddstaff").hide();
                    $("#btnUpdate").show();

                    $("#AgentStaffId").val(data.AgentStaffId);
                    $("#FirstName").val(data.FirstName);
                    $("#LastName").val(data.LastName);
                    $("#MiddleName").val(data.MiddleName);
                    $("#PhoneNumber").val(data.PhoneNumber);
                    $("#Email").val(data.Email);
                    $("#UserName").val(data.UserName);
                    $("#Password").val(data.Password);
                    $("#Email").prop("disabled", true);
                    $("#Password").prop("disabled", true);
                }

            });


        }

        $("#Email").on('change', function () {
            var email = $("#Email").val();
            if (email !== "") {
                var reg = /^([A-Za-z0-9_\-\.])+\@@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;
                if (reg.test(email) === false) {
                    $("#lblerror").show();
                    $("#lblerror").html("Enter valid Email Address");
                    $("#Email").focus();
                    $("#Email").val("");
                    return false;

                }
            }

            $.ajax({
                method: "POST",
                url: "/Account/CheckUsernameexistorNot",
                data: { username: email },
                dataType: "json",
                success: function (data) {
                    if (data == true) {
                        $("#lblerror").show();
                        $("#lblerror").html("Email already exists");
                        $("#Email").val("");
                        $("#Email").focus();

                    } else {
                        $("#lblerror").show();
                        $("#lblerror").html("");
                    }
                }

            });

        });

        $("#btnAddstaff").on("click", function (e) {

            var label = $("#lblerror").text();
            var Email = $("#Email").val();
            $("#lblerror").hide();
            if (Email !== "") {
                var reg = /^([A-Za-z0-9_\-\.])+\@@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;
                if (reg.test(Email) === false) {
                    $("#lblerror").show();
                    $("#lblerror").html("Enter valid Email Address");
                    $("#Email").focus();
                    $("#Email").val("");
                    return false;
                }
            }


            var Staff = {
                FirstName: $("#FirstName").val(),
                LastName: $("#LastName").val(),
                MiddleName: $("#MiddleName").val(),
                PhoneNumber: $("#PhoneNumber").val(),
                Email: $("#Email").val(),
                Password: $("#Password").val(),
                UserName: $("#UserName").val(),
            }
            if (Staff.FirstName != "" && Staff.LastName != "" && Staff.PhoneNumber != "" && Staff.Email != "") {
                e.preventDefault();
                $.ajax({

                    method: "POST",
                    url: "/Account/CheckUsernameexistorNot",
                    data: { username: Email },
                    dataType: "json",
                    success: function (data) {
                        debugger
                        if (data == true) {
                            $("#lblerror").show();
                            $("#lblerror").html("Email already exists");
                            $("#Email").val("");
                            $("#Email").focus();

                        } else {

                            $(".loader").show();
                            $("#overlay").show();
                            $("#lblerror").html("");

                            $.ajax({

                                method: "POST",
                                url: "/Agent/AddStaff",
                                dataType: "json",
                                data: { staff: Staff },
                                success: function (data) {
                                    $(".loader").hide();
                                    $("#overlay").hide();
                                    if (data == true) {
                                        Swal.fire({
                                            title: "Success!",
                                            text: "Staff added successfully.!",
                                            type: 'success',

                                        }).then(function () {
                                            window.location.href = "/Agent/AddStaff";
                                        })

                                    }
                                    else {
                                        $(".loader").hide();
                                        $("#overlay").hide();
                                        $("#lblerror").html("");
                                    }
                                }

                            });

                        }
                    }

                });

            }

        });

        $("#btnUpdate").on("click", function (e) {
            var mode = getUrlParameter('mode');
            var Id = getUrlParameter('Id');
            var Staff = {
                FirstName: $("#FirstName").val(),
                LastName: $("#LastName").val(),
                MiddleName: $("#MiddleName").val(),
                PhoneNumber: $("#PhoneNumber").val(),
                Email: $("#Email").val(),
                Password: $("#Password").val(),
                UserName: $("#UserName").val(),
                AgentStaffId: $("#AgentStaffId").val(),
            }
            if (Staff.FirstName != "" && Staff.LastName != "" && Staff.PhoneNumber != "" && Staff.Email != "") {
                e.preventDefault();
                $.ajax({
                    method: "POST",
                    url: "/Agent/AddStaff",
                    dataType: "json",
                    data: { staff: Staff },
                    success: function (data) {
                        if (data == false) {
                            Swal.fire({
                                title: "Success!",
                                text: "Staff  updated successfully.!",
                                type: 'success',

                            }).then(function () {
                                if (mode == 'p') {
                                    window.location.href = "/Agent/AddStaff?Id=" + Id + "&mode=" + mode;

                                } else {
                                    window.location.href = "/Agent/AddStaff";
                                }
                            })
                            // window.location.href = "/Agent/AddStaff";
                        }
                    }

                });
            }
        });
    });

    function btnDelete(AgentStaffId) {

        var Id = AgentStaffId;
        Swal.fire({
            title: 'Are you sure?',
            text: "You want delete this staff !",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then(function (isConfirm) {

            if (isConfirm.value == true) {

                $.ajax({
                    type: "POST",
                    url: "/Agent/DeleteAgentStaff",
                    data: { 'Id': Id },
                    cache: false,
                    dataType: "json",
                    success: function (data) {
                        debugger;
                        if (data == true) {

                            Swal.fire({
                                title: "Success!",
                                text: "Staff deleted successfully.!",
                                type: 'success',

                            }).then(function () {
                                window.location.href = "/Agent/AddStaff";
                            })
                        }
                    }
                });
            }
        })
    }
</script>

