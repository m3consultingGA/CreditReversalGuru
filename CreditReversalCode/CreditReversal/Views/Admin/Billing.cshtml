                <div class="row m-2 p-2">
                    <div class="table-responsive">
                        <table id="tblCustomers" class="table table-bordered">
                            <thead>
                                <tr class="trTable">
                                    <th>Agent Name</th>
                                    <th>Billing Type</th>
                                    <th>Pricing Plan</th>
                                    <th>Transaction No</th>
                                    <th>Card Type</th>
                                    <th>Payment Type</th>
                                    <th>Payment Status</th>
                                    <th>Payment Date</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var i in ViewBag.Agent)
                                {
                                <tr>

                                    <td>@i.FirstName</td>
                                    <td>@i.BillingType</td>
                                    <td>@i.pricing</td>
                                    <td>@i.TransactionNo</td>
                                    <td>@i.CardType</td>
                                    <td>@i.PaymentType</td>
                                    <td>@i.PaymentStatus</td>
                                    <td>@i.PaymentDate</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



