
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_PublicLayoutPage.cshtml";
}
<title> Create User </title>
<head>
    <link href="~/Content/loader.css" rel="stylesheet" />   
</head>
@{
    string heading = "Create User";
    if (Request != null)
    {
        if (Request["mode"] == "Edit")
        {
            heading = "Edit User";
        }
    }
}

<ol class="breadcrumb">
    @if (Session["UserRole"] != null)
    {
        <li class="breadcrumb-item ml-auto"><a href="/Dashboard/Index"><i class="fa fa-dashboard"></i>&nbsp;Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/Users/Index">&nbsp; User</a></li>
        <li class="breadcrumb-item active">@heading</li>
    }
    else
    {
        <li class="breadcrumb-item active ml-auto"><i class="fa fa-users"></i>&nbsp;@heading</li>
    }
</ol>



<div ng-app="UsersApp" ng-controller="UsersController">
    <div class="divMain">
        <div class="col-sm-12">
            <div class="form-group">
                <div class="row m-2 py-2">
                    <h5>@heading </h5>
                </div>

                <div class="row  m-2">
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label class="col-md-4 col-sm-4">User Name&nbsp;<span class="label-dangerfont">*</span></label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" ng-disabled="status" ng-model="UserName" />
                                <input type="hidden" ng-hide="UserId" ng-model="UserId" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row  m-2">
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label class="col-md-4 col-sm-4">Password&nbsp;<span class="label-dangerfont">*</span></label>
                            <div class="col-sm-6">
                                <input type="password" class="form-control" ng-model="Password" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row  m-2 ">
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label class="col-md-4 col-sm-4">Email&nbsp;<span class="label-dangerfont">*</span></label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" ng-model="EmailId" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">                    
                    <div class="col-sm-6">
                        <div class="text-center">
                            <input type="button" ng-show="HideUpdate" class="btn btn-secondary" value="Update" ng-click="Update()" />
                            <input type="button" ng-show="HideAdd" class="btn btn-secondary" value="Add" ng-click="Add()" />
                            <input type="button" class="btn btn-danger" value="Cancel" ng-click="Cancel()" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Users.js"></script>
